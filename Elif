def sanitize_excel_value(value: str) -> str:
    """Sanitize value to prevent Excel from interpreting it as a formula"""
    if not value:
        return ""
    
    # Characters that can trigger Excel formula interpretation
    formula_chars = ['=', '+', '-', '@', '\t', '\r', '\n']
    
    # If value starts with any formula character, add a single quote prefix
    if any(value.startswith(char) for char in formula_chars):
        return "'" + value
    
    # Clean up any problematic characters
    value = value.replace('\r\n', ' ').replace('\r', ' ').replace('\n', ' ')
    value = value.replace('\t', ' ')  # Replace tabs with spaces
    
    # Limit cell content length (Excel has limits)
    if len(value) > 32767:  # Excel cell character limit
        value = value[:32764] + "..."
    
    return value
